@model IEnumerable<MovieStore.ViewModels.ActorViewModel>

@{
    ViewData["Title"] = "PregledSvihFilmova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PregledSvihFilmova</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieInvitation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieApplication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRoles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieInvitation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieApplication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieRoles)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
